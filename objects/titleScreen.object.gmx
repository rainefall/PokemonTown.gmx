        <arguments>
          <argument>
            <kind>1</kind>
            <string>// main menu
draw_set_font(fnt_ui);
if scrn == MAIN {
    draw_text_transformed(480-string_width("New Game"),384,"New Game",2,2,0);
    if ds_list_size(saveFiles) == 0 draw_set_colour(c_gray);
    draw_text_transformed(480-string_width("Load Game"),410,"Load Game",2,2,0);
    if ds_list_size(saveFiles) == 0 draw_set_colour(c_white);
    draw_text_transformed(480-string_width("Settings"),436,"Settings",2,2,0);
    draw_text_transformed(480-string_width("Exit"),462,"Exit",2,2,0);
    if sel &gt;= 0
        draw_sprite(ui_sel,0,480+string_width("Load Game")+4+dsin(selcount)*4,390+26*sel);
} else if scrn == NEW {
    draw_text_transformed(480-string_width("Enter save file name and press enter."),384,"Enter save file name and press enter.",2,2,0);
    draw_text_transformed(480-string_width(keyboard_string),410,keyboard_string,2,2,0);
} else if scrn == LOAD {
    for (var i = 0; i &lt; 3; i++) {
        if i &gt; ds_list_size(saveFiles)-1 break;
        if file_exists(saveFiles[| i+loadoffset]) {
            var txt = string(i+1+loadoffset)+": "+string_copy(saveFiles[| i+loadoffset],1,string_length(saveFiles[| i+loadoffset])-7); 
        } else {
            var txt = "";
        }
        draw_text_transformed(480-string_width(txt),384+26*i,txt,2,2,0);
        if sel == i
            draw_sprite(ui_sel,0,480+string_width(txt)+4+dsin(selcount)*4,390+26*sel);
    }
    draw_text_transformed(480-string_width("Back"),462,"Back",2,2,1);
    if sel == 3 draw_sprite(ui_sel,0,480+string_width("Back")+4+dsin(selcount)*4,390+26*sel);
}

if fadeout {
    if fadetimer-120 &gt; 0
        draw_set_alpha(1-(fadetimer-120)/120);
    draw_set_color(c_black);
    draw_rectangle(0,0,window_get_width(),window_get_height(),false);
    draw_set_alpha(1);
    draw_set_color(c_white);
}
</string>
