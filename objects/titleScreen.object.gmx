        <isnot>0</isnot>
        <arguments>
          <argument>
            <kind>1</kind>
            <string>if selcount &gt; 360
    selcount -= 360;
selcount += 4;

if filetodelete != "" {
    file_delete(filetodelete);
    ds_list_delete(saveFiles,ds_list_find_index(saveFiles,filetodelete));
    filetodelete="";
}
if !fadeout {
    if scrn == MAIN {
        sel = -1
        if window_mouse_get_x() &gt; 480-string_width("Load Game")*2 &amp;&amp; window_mouse_get_x() &lt; 480+string_width("Load Game") {
            if window_mouse_get_y() &gt; 384 sel = 0;
            if window_mouse_get_y() &gt; 410 sel = 1;
            if window_mouse_get_y() &gt; 436 sel = 2;
            if window_mouse_get_y() &gt; 462 sel = 3;
            if window_mouse_get_y() &gt; 486 sel = -1;
            
            if sel &gt;= 0 &amp;&amp; mouse_check_button_pressed(mb_left) {
                if sel == 3 {
                    game_end();
                } else if sel == 1 &amp;&amp; ds_list_size(saveFiles) == 0 {
                    // no
                } else {
                    scrn = sel+1;
                    // setup for new game screen
                    if scrn == NEW {
                        keyboard_string="";
                    }
                }
            }
        }
    } else if scrn == NEW {
        if string_length(keyboard_string) &gt; 15{
            keyboard_string = string_copy(keyboard_string, 1, 15);
        }
        if keyboard_check_pressed(vk_enter) {
            gameManager.saveFile = createWorld(keyboard_string);
            fadeoutMusic(2000);
            fadeout = true;
        }
    } else if scrn == LOAD {
        if ds_list_size(saveFiles) &lt;= 0 scrn = MAIN;
        sel = -1
        if window_mouse_get_x() &gt; 480-string_width("Load Game")*2 &amp;&amp; window_mouse_get_x() &lt; 480+string_width("Load Game") {
            if window_mouse_get_y() &gt; 384 sel = 0;
            if window_mouse_get_y() &gt; 410 sel = 1;
            if window_mouse_get_y() &gt; 436 sel = 2;
            if window_mouse_get_y() &gt; 462 sel = 3;
            
            if sel &gt;= 0 &amp;&amp; keyboard_check(vk_alt) &amp;&amp; keyboard_check_pressed(ord("D")) {
                filetodelete= saveFiles[| sel+loadoffset];
            }
            
            if sel &gt;= 0 &amp;&amp; mouse_check_button_pressed(mb_left) {
                if sel == 3 {
                    scrn = MAIN;
                } else {
                    fadeoutMusic(2000);
                    gameManager.saveFile = loadSave(saveFiles[| sel+loadoffset]);
                    fadeout = true;
                }
            }
        }
        
        if mouse_wheel_up() &amp;&amp; loadoffset &gt; 0
            loadoffset--;
        if mouse_wheel_down() &amp;&amp; loadoffset &lt; ds_list_size(saveFiles)-3
            loadoffset++;
    } else if scrn == SETTINGS {
    
    }
} else {
    fadetimer -= 1;
    if fadetimer &lt;= 0 {
        stopMusic();
        room_goto(rm_game)
    }
}
</string>
